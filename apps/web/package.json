{
  "name": "@lvmann/web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "pnpm run build && wrangler dev",
    "deploy": "pnpm run build && wrangler deploy --minify",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "cf-typegen": "wrangler types && mv worker-configuration.d.ts src/worker-configuration.d.ts",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "wrangler types --env-interface WorkerEnv src/worker-env.d.ts"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250303.0",
    "@eslint/compat": "^1.2.7",
    "@fontsource-variable/exo-2": "^5.2.5",
    "@fontsource-variable/inter": "^5.2.5",
    "@lucide/svelte": "^0.479.0",
    "@lvmann/eslint-config": "workspace:*",
    "@sveltejs/adapter-cloudflare-workers": "^2.8.0",
    "@sveltejs/enhanced-img": "^0.4.4",
    "@sveltejs/kit": "^2.17.3",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/vite": "^4.0.9",
    "eslint-plugin-svelte": "^3.0.2",
    "mdsvex": "^0.12.3",
    "simple-icons": "^14.10.0",
    "super-sitemap": "^1.0.3",
    "svelte": "^5.22.0",
    "svelte-check": "^4.1.4",
    "svgson": "^5.3.1",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.0",
    "wrangler": "^3.114.0"
  }
}
